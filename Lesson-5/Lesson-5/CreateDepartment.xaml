<Window x:Class="Lesson_5.CreateDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_5"
        mc:Ignorable="d"
        Title="Создание департамента" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Button Name="CreateBtn" Content="Создать" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,0" FontSize="14" Padding="5" Height="30" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Название департамента" Margin="0,10,0,0" VerticalAlignment="Top" Grid.Column="0" FontSize="14"/>
        <TextBox Name="DepartmentTitleTxt" HorizontalAlignment="Stretch" Height="23" Margin="10,40,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="0"/>
    </Grid>
</Window>
