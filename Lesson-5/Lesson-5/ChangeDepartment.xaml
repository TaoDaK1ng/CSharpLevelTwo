<Window x:Class="Lesson_5.ChangeDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_5"
        mc:Ignorable="d"
        Title="Выбор департамента" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="655*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ComboBox" HorizontalAlignment="Stretch" ItemsSource="{Binding}" Margin="10" VerticalAlignment="Top" Grid.Column="0" Height="22"/>
        <Button Content="Выбрать" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Top" Grid.Column="1" Height="20"/>

    </Grid>
</Window>
