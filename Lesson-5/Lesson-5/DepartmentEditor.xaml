<Window x:Class="Lesson_5.DepartmentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_5"
        mc:Ignorable="d"
        Title="Редактор департамента" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Button Name="CreateButton" Content="Применить" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,0" FontSize="14" Padding="5" Height="30"/>
        <StackPanel Name="StackPanel" Margin="10">
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Название департамента" VerticalAlignment="Top" Grid.Column="0" FontSize="14"/>
        <TextBox Name="DepartmentTxt" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="0"/>
        </StackPanel>
    </Grid>
</Window>
